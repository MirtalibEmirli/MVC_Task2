@{
    Layout = null;
    var Cities = Model.Cities;
}

@model MVC_Task2.Models.UserAddViewModel;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add User</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f9fafc;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0;
            min-height: 100vh;
            color: #333;
        }

        .form-container {
            background: #ffffff;
            padding: 30px 40px;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            max-width: 450px;
            width: 100%;
            box-sizing: border-box;
        }

            .form-container h1 {
                font-size: 1.8rem;
                font-weight: 600;
                margin-bottom: 20px;
                text-align: center;
                color: #1a202c;
            }

        .form-section {
            margin-bottom: 20px;
        }

        label {
            display: block;
            font-weight: 600;
            margin-bottom: 8px;
            color: #4a5568;
        }

        input, select {
            width: 100%;
            padding: 12px;
            border: 1px solid #e2e8f0;
            border-radius: 8px;
            font-size: 1rem;
            background: #edf2f7;
            transition: all 0.3s;
        }

            input:focus, select:focus {
                border-color: #3182ce;
                box-shadow: 0 0 0 3px rgba(66, 153, 225, 0.5);
                outline: none;
            }

        .validation-message {
            margin-top: 5px;
            font-size: 0.85rem;
            color: #e53e3e;
        }

        .button-container {
            margin-top: 20px;
            display: flex;
            gap: 10px;
        }

        button {
            width: 100%;
            padding: 12px 16px;
            font-size: 1rem;
            font-weight: 600;
            color: #ffffff;
            background: #3182ce;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background 0.3s;
        }

            button:hover {
                background: #2b6cb0;
            }

        a {
            text-align: center;
            text-decoration: none;
            font-size: 1rem;
            font-weight: 600;
            color: #4a5568;
            padding: 12px 16px;
            border: 1px solid #e2e8f0;
            border-radius: 8px;
            background: #edf2f7;
            transition: all 0.3s;
        }

            a:hover {
                background: #e2e8f0;
                color: #2d3748;
            }

        

        
    </style>
</head>
<body>
    <div class="form-container">
        <h1>Add User</h1>
        <form asp-controller="User" asp-action="Add" method="post">
            <div class="form-section">
                <label asp-for="User.FirstName"></label>
                <input asp-for="User.FirstName" />
                <span asp-validation-for="User.FirstName" class="validation-message"></span>
            </div>

            <div class="form-section">
                <label asp-for="User.LastName"></label>
                <input asp-for="User.LastName" />
                <span asp-validation-for="User.LastName" class="validation-message"></span>
            </div>

            <div class="form-section">
                <label asp-for="User.Number"></label>
                <input asp-for="User.Number" />
                <span asp-validation-for="User.Number" class="validation-message"></span>
            </div>

            <div class="form-section">
                <label asp-for="User.Img"></label>
                <input asp-for="User.Img" />
                <span asp-validation-for="User.Img" class="validation-message"></span>
            </div>

            <div class="form-section">
                <label asp-for="User.Description"></label>
                <input asp-for="User.Description" />
                <span asp-validation-for="User.Description" class="validation-message"></span>
            </div>

            <div class="form-section">
                <label asp-for="User.CityId"></label>
                <select asp-items="Cities" asp-for="User.CityId"></select>
            </div>

            <div class="button-container">
                <button type="submit">Register</button>
                <a asp-action="Back" asp-controller="User">Back to Home</a>
            </div>
        </form>
    </div>
</body>
</html>
