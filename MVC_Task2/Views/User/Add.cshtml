@{
    Layout = null;
    var Cities = Model.Cities;
}

@model MVC_Task2.Models.UserAddViewModel;

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add User</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Montserrat', sans-serif;
            background-color: #f5f7fa;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;

        }

        .form-container {
            background: white;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 500px;
            box-sizing: border-box;
        }

            .form-container h1 {
                font-size: 2rem;
                font-weight: 600;
                color: #333;
                margin-bottom: 20px;
            }

        .section {
            margin-bottom: 20px;
        }

        label {
            font-weight: 600;
            color: #444;
            margin-bottom: 5px;
            display: inline-block;
        }

        input, select {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border-radius: 4px;
            border: 1px solid #ddd;
            font-size: 1rem;
            box-sizing: border-box;
        }

            input:focus, select:focus {
                border-color: #3f9fdd;
                outline: none;
            }

        .validation-message {
            color: #f44336;
            font-size: 0.9rem;
        }

        .button-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        button {
            background-color: #3f9fdd;
            color: white;
            border: none;
            padding: 12px 20px;
            font-size: 1rem;
            font-weight: 600;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #3587bb;
            }

        a {
            color: #3f9fdd;
            text-decoration: none;
            font-weight: 600;
            font-size: 1rem;
        }

            a:hover {
                color: #3587bb;
            }

       
        .form-container h1 {
            font-size: 1.5rem;
        }

        button {
            width: 100%;
        }

        }
    </style>
</head>
<body>
  <form asp-controller="User" asp-action="Add" method="post">
        <section>
            <label asp-for="User.FirstName"></label>
            <input asp-for="User.FirstName" />
            <span asp-validation-for="User.FirstName" class="validation-message"></span>
        </section>

        <section>
            <label asp-for="User.LastName"></label>
            <input asp-for="User.LastName" />
            <span asp-validation-for="User.LastName" class="validation-message"></span>
        </section>

        <section>
            <label asp-for="User.Number"></label>
            <input asp-for="User.Number" />
            <span asp-validation-for="User.Number" class="validation-message"></span>
        </section>

        <section>
            <label asp-for="User.Img"></label>
            <input asp-for="User.Img" />
            <span asp-validation-for="User.Img" class="validation-message"></span>
        </section>

        <section>
            <label asp-for="User.Description"></label>
            <input asp-for="User.Description" />
            <span asp-validation-for="User.Description" class="validation-message"></span>
        </section>

        <section>
            <label asp-for="User.CityId"></label>
            <select asp-items="Cities" asp-for="User.CityId"> </select>
        </section>
       
        <section>
            <button type="submit">Register</button>
            <a asp-action="Back" style="text-decoration:none;color:black;font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font:900; font-weight:600; margin-top:15px; border:1px;border-block-color:gray;" asp-controller="User">Back to Home</a>
        </section>
  </form>

</body>
</html>